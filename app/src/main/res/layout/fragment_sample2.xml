<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Sample2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.yinli.ylsegmentedcontrol.YLSegmentedRadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.yinli.ylsegmentedcontrol.YLSegmentedRadioButton
                android:id="@+id/star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Star" />

            <com.yinli.ylsegmentedcontrol.YLSegmentedRadioButton
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search" />

            <com.yinli.ylsegmentedcontrol.YLSegmentedRadioButton
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera" />

        </com.yinli.ylsegmentedcontrol.YLSegmentedRadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <com.yinli.ylsegmentedcontrol.YLSegmentedRadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:activeColor="#E45140"
            android:layout_gravity="center">

            <com.yinli.ylsegmentedcontrol.YLSegmentedRadioButton
                android:id="@+id/vButton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawableRight="@drawable/ic_action_star"
                android:text="Star" />

            <com.yinli.ylsegmentedcontrol.YLSegmentedRadioButton
                android:id="@+id/vButton10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_action_search"
                android:text="Search" />

            <com.yinli.ylsegmentedcontrol.YLSegmentedRadioButton
                android:id="@+id/vButton11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_action_photo"
                android:text="Camera" />

        </com.yinli.ylsegmentedcontrol.YLSegmentedRadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray" />

        <com.yinli.ylsegmentedcontrol.YLSegmentedRadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            custom:activeColor="#36CD51">

            <com.yinli.ylsegmentedcontrol.YLSegmentedImageRadioButton
                android:id="@+id/vButton5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:checked="true"
                custom:iconImageSrc="@drawable/facebook" />

            <com.yinli.ylsegmentedcontrol.YLSegmentedImageRadioButton
                android:id="@+id/vButton6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                custom:iconImageSrc="@drawable/twitter" />

            <com.yinli.ylsegmentedcontrol.YLSegmentedImageRadioButton
                android:id="@+id/vButton7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                custom:iconImageSrc="@drawable/youtube" />

        </com.yinli.ylsegmentedcontrol.YLSegmentedRadioGroup>
    </LinearLayout>
</ScrollView>

